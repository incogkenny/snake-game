<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="560.0" prefWidth="870.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snake_game.MenuController">
   <children>
      <ImageView fitHeight="560.0" fitWidth="870.0">
         <image>
            <Image url="@images/menu-background.jpg" />
         </image>
      </ImageView>
      <Button fx:id="playButton" layoutX="66.0" layoutY="147.0" mnemonicParsing="false" onAction="#playGame" prefHeight="55.0" prefWidth="253.0" text="Play Game">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="settingsButton" layoutX="66.0" layoutY="297.0" mnemonicParsing="false" onAction="#openSettings" prefHeight="55.0" prefWidth="253.0" text="Settings">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="howToPlayButton" layoutX="66.0" layoutY="225.0" mnemonicParsing="false" onAction="#howToPlay" prefHeight="55.0" prefWidth="253.0" text="How to Play">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="66.0" layoutY="373.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="55.0" prefWidth="253.0" text="Exit">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
