<AnchorPane prefHeight="560.0" prefWidth="870.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.snake_game.Controllers.PauseController">
    <ImageView fitHeight="560.0" fitWidth="870.0" pickOnBounds="true">
        <Image url="@../images/UI-background3.png" />
    </ImageView>
    <AnchorPane layoutX="301.0" layoutY="112.0" prefHeight="335.0" prefWidth="267.0" style="-fx-background-color: gainsboro;">
