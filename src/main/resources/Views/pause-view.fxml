            <font>
                <javafx.scene.text.Font name="Candara" size="41.0" />
            </font>
            <textFill>
                <LinearGradient startX="1.0" startY="0.41955834758770577">
                    <stops>
                        <Stop>
                            <color>
                                <Color />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
